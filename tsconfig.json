{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": "./packages",
    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@atomrx/atom": ["atom/src"],
      "@atomrx/utils": ["utils/src"],
      "@atomrx/lens": ["lens/src"],
      "@atomrx/react": ["react/src"],
      "@atomrx/wrapped": ["wrapped/src"],
      "@atomrx/*": ["*/src"]
    }
  },
}
