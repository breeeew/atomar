{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "esm",
    "paths": {
      "@atomar/atom": ["./packages/atom/src"],
      "@atomar/atom/*": ["./packages/atom/src/*"],
      "@atomar/utils": ["./packages/utils/src"],
      "@atomar/utils/*":["./packages/utils/src/*"],
      "@atomar/lens": ["./packages/lens/src"],
      "@atomar/lens/*": ["./packages/lens/src/*"],
      "@atomar/react": ["./packages/react/src"],
      "@atomar/react/*": ["./packages/react/src/*"],
      "@atomar/wrapped": ["./packages/wrapped/src"],
      "@atomar/wrapped/*":["./packages/wrapped/src/*"]
    }
  },
  "include": [
    "src/lib"
  ],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"],
}
